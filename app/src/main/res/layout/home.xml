<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:adjustViewBounds="true"
                android:background="#182524"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/texthome" />

        </LinearLayout>

        <TextView
            android:id="@+id/hometext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="normal|bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/arrow"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/buttonback"
                android:padding="30dp"
                android:id="@+id/btnnewt"
                android:onClick="homebtn" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:onClick="homebtn"
                android:layout_margin="10dp"
                android:background="@drawable/buttonback"
                android:adjustViewBounds="true"
                android:src="@drawable/inv"
                android:layout_weight="1"
                android:padding="30dp"
                android:id="@+id/btninventory" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="New Transactions"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginLeft="40dp"

                android:textStyle="normal|bold"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Inventory"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:textStyle="normal|bold"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/transaction"
                android:onClick="homebtn"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:background="@drawable/buttonback"
                android:paddingLeft="2dp"
                android:id="@+id/btntrans" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:onClick="homebtn"
                android:layout_margin="10dp"
                android:src="@drawable/costum"
                android:background="@drawable/buttonback"
                android:layout_weight="1"
                android:padding="35dp"
                android:paddingBottom="20dp"
                android:id="@+id/btncust" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:orientation="horizontal"

            android:layout_marginBottom="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction History"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="40dp"
                android:textStyle="normal|bold"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Customers"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:layout_marginLeft="9dp"
                android:textStyle="normal|bold"
                />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
